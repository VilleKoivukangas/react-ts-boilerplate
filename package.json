{
  "name": "react-ts-boilerplate",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@types/react-redux": "^6.0.6",
    "@types/react-router": "^4.0.30",
    "add": "^2.0.6",
    "axios": "^0.18.0",
    "install": "^0.12.1",
    "localized-strings": "0.0.11",
    "lodash": "^4.17.11",
    "node-sass": "^4.9.3",
    "node-sass-chokidar": "^1.3.3",
    "npm": "^6.4.0",
    "npm-run-all": "^4.1.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-image-lightbox": "^5.0.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "2.17.0",
    "react-select": "^2.0.0",
    "redux": "^4.0.0",
    "semantic-ui-css": "^2.3.3",
    "semantic-ui-react": "^0.82.3"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-ts": "react-scripts-ts start",
    "build-ts": "react-scripts-ts build",
    "start": "npm-run-all -p watch-css start-ts",
    "build": "npm-run-all build-css build-ts",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/node": "^10.7.1",
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "@types/react-router-dom": "^4.3.0",
    "@types/react-select": "^2.0.4",
    "typescript": "^3.0.1"
  }
}
